{
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "build",
        "lib": [ "es2016" ],
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": ["node", "mocha", "chai", "sinon-chai"]
    },
    "exclude": [
        "node_modules",
        "build",
        "packages/blockchain-wallet/node_modules",
        "packages/blockchain-wallet/build",
        "packages/blockchain-ui/extension",
        "packages/blockchain-ui/.vscode-test",
        "packages/blockchain-ui/cucumber",
        "packages/blockchain-ui/cypress",
        "packages/blockchain-ui/enzyme",
        "packages/blockchain-ui/test",
        "packages/blockchain-ui/node_modules",
        "packages/blockchain-ui/build",
        "packages/blockchain-gateway-v1/node_modules",
        "packages/blockchain-gateway-v1/build",
        "packages/blockchain-extension/node_modules",
        "packages/blockchain-extension/.vscode-test",
        "packages/blockchain-extension/cucumber/tmp",
        "packages/blockchain-extension/src",
        "packages/blockchain-extension/cypress",
        "packages/blockchain-extension/build",
        "packages/blockchain-environment-v1/node_modules",
        "packages/blockchain-environment-v1/build",
        "packages/blockchain-common/node_modules",
        "packages/blockchain-common/build"
        
    ],
    "include": [
        "src",
        "test",
        "index.ts",
        "packages/blockchain-wallet/src",
        "packages/blockchain-wallet/test",
        "packages/blockchain-wallet/index.ts",
        "packages/blockchain-ui/src",
        "packages/blockchain-gateway-v1/src",
        "packages/blockchain-gateway-v1/test",
        "packages/blockchain-gateway-v1/index.ts",
        "packages/blockchain-extension/extension",
        "packages/blockchain-extension/test",
        "packages/blockchain-extension/cucumber",
        "packages/blockchain-environment-v1/src",
        "packages/blockchain-environment-v1/test",
        "packages/blockchain-environment-v1/index.ts",
        "packages/blockchain-common/src",
        "packages/blockchain-common/test",
        "packages/blockchain-common/index.ts"
    ]
}
