// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/build/**/*.js"
      ],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Unit Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/test"
      ],
      "outFiles": [
        "${workspaceFolder}/build/test/**/*.js"
      ],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Debug Unit Tests (no coverage)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/test"
      ],
      "outFiles": [
        "${workspaceFolder}/build/test/**/*.js"
      ],
      "preLaunchTask": "npm: watch",
      "env": {
        "WITHOUTCOVERAGE": "true"
      }
    },
    {
      "name": "Cucumber",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/cucumber/data/cucumber.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/cucumber/"
      ],
      "outFiles": [
        "${workspaceFolder}/build/cucumber/**/*.feature"
      ],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Cucumber other fabric",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/cucumber/data/cucumber.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/cucumber/"
      ],
      "outFiles": [
        "${workspaceFolder}/build/cucumber/**/*.feature"
      ],
      "preLaunchTask": "npm: watch",
      "env": {
        "OTHER_FABRIC": "true"
      }
    },
    {
      "name": "Cucumber other fabric (new fabric)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/cucumber/data/cucumber.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/cucumber/"
      ],
      "outFiles": [
        "${workspaceFolder}/build/cucumber/**/*.feature"
      ],
      "preLaunchTask": "npm: cucumberTests",
      "env": {
        "OTHER_FABRIC": "true"
      }
    },
    {
      "name": "Cucumber OpsTools fabric",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/cucumber/data/cucumber.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/cucumber/"
      ],
      "outFiles": [
        "${workspaceFolder}/build/cucumber/**/*.feature"
      ],
      "preLaunchTask": "npm: watch",
      "env": {
        "OPSTOOLS_FABRIC": "true"
      }
    },
    {
      "name": "Cucumber ansible fabric",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/cucumber/data/cucumber.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/cucumber/"
      ],
      "outFiles": [
        "${workspaceFolder}/build/cucumber/**/*.feature"
      ],
      "preLaunchTask": "npm: watch",
      "env": {
        "ANSIBLE_FABRIC": "true"
      }
    },
    {
      "name": "Cucumber ansible fabric (new fabric)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/cucumber/data/cucumber.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/cucumber/"
      ],
      "outFiles": [
        "${workspaceFolder}/build/cucumber/**/*.feature"
      ],
      "preLaunchTask": "npm: cucumberAnsibleTests",
      "env": {
        "ANSIBLE_FABRIC": "true"
      }
    },
    {
      "name": "Cucumber Two Org fabric",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/cucumber/data/cucumber.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/cucumber/"
      ],
      "outFiles": [
        "${workspaceFolder}/build/cucumber/**/*.feature"
      ],
      "preLaunchTask": "npm: watch",
      "env": {
        "TWO_ORG_FABRIC": "true"
      }
    },
    {
      "name": "Cucumber Two Org fabric (new fabric)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/cucumber/data/cucumber.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/cucumber/"
      ],
      "outFiles": [
        "${workspaceFolder}/build/cucumber/**/*.feature"
      ],
      "preLaunchTask": "npm: cucumberTests",
      "env": {
        "TWO_ORG_FABRIC": "true"
      }
    },
  ]
}
