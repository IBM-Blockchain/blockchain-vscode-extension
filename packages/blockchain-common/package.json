{
    "name": "ibm-blockchain-platform-common",
    "author": "IBMBlockchain",
    "homepage": "https://www.ibm.com/blockchain",
    "license": "Apache-2.0",
    "version": "1.0.17",
    "publisher": "IBMBlockchain",
    "repository": {
        "type": "git",
        "url": "https://github.com/IBM-Blockchain/blockchain-vscode-extension"
    },
    "main": "build/index.js",
    "scripts": {
        "compile": "rimraf build && npm run build",
        "watch": "rimraf build && tsc -watch -p tsconfig.json",
        "pretest": "npm run compile && npm run lint && npm run licchk",
        "unit": "npm run pretest && nyc mocha -r ts-node/register --reporter mocha-multi-reporters --reporter-options configFile=mochaConfig.json './test/**/*.test.ts'",
        "licchk": "license-check-and-add",
        "tslint": "tslint --project tsconfig.json",
        "lint": "npm run tslint 'src/**/*.ts' 'test/**/*.test.ts'",
        "build": "tsc -p tsconfig.json",
        "createModule": "npm pack"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^0.1.3",
        "@types/chai": "4.1.4",
        "@types/chai-as-promised": "7.1.0",
        "@types/fs-extra": "5.0.4",
        "@types/mocha": "^5.2.5",
        "@types/node": "10.14.5",
        "@types/rimraf": "^2.0.2",
        "@types/semver": "^6.0.0",
        "@types/sinon": "5.0.1",
        "@types/sinon-chai": "3.2.0",
        "angular-tslint-rules": "1.5.0",
        "chai": "4.1.2",
        "chai-as-promised": "7.1.1",
        "istanbul": "0.4.5",
        "license-check-and-add": "2.3.6",
        "mocha": "^6.1.4",
        "mocha-junit-reporter": "^1.23.1",
        "mocha-multi-reporters": "^1.1.7",
        "nyc": "^14.1.1",
        "rimraf": "^2.6.2",
        "sinon": "6.1.4",
        "sinon-chai": "3.2.0",
        "source-map-support": "^0.5.16",
        "ts-node": "^7.0.0",
        "tslint": "5.11.0",
        "tslint-loader": "3.6.0",
        "typescript": "3.6.3"
    },
    "dependencies": {
        "fs-extra": "^7.0.1",
        "js-yaml": "3.13.1"
    },
    "license-check-and-add-config": {
        "folder": ".",
        "license": "LICENSE.txt",
        "exact_paths_method": "EXCLUDE",
        "exact_paths": [
            "scripts",
            "node_modules",
            ".idea",
            ".git",
            "build",
            "coverage",
            "test/data",
            ".DS_Store",
            "CHANGELOG.md",
            "ISSUE_TEMPLATE.md",
            "LICENSE"
        ],
        "file_type_method": "EXCLUDE",
        "file_types": [
            ".txt",
            ".vsix",
            ".yml",
            ".yml",
            ".yaml",
            ".tgz",
            ".key",
            ".gz",
            ".pem",
            ".crt",
            ".tx",
            ".block",
            ".log",
            ".pid",
            ".port",
            ".feature"
        ],
        "insert_license": false,
        "clear_license": false,
        "license_formats": {
            "ts|acl|cto|js|qry": {
                "prepend": "/*",
                "append": "*/",
                "eachLine": {
                    "prepend": " * "
                }
            },
            "vscodeignore": {
                "eachLine": {
                    "prepend": "# "
                }
            },
            "md": {
                "file": "./markdown-license.txt"
            }
        }
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "reporter": [
            "text-summary",
            "html"
        ],
        "exclude": [
            "build",
            "index.ts",
            "coverage",
            "test"
        ],
        "all": true,
        "check-coverage": true,
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
    }
}
