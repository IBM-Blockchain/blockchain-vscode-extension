{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "trailing-comma": [
            false,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "rulesDirectory": [
            "./node_modules/codelyzer"
        ],
        "interface-name": [
            false,
            "always-prefix"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "array-type": false,
        "prefer-for-of": false,
        "member-access": false,
        "no-console": [
            true,
            "time",
            "timeEnd",
            "trace"
        ],
        "forin": false,
        "max-line-length": false,
        "no-string-literal": false,
        "no-use-before-declare": true,
        "object-literal-sort-keys": false,
        "object-literal-shorthand": false,
        "ordered-imports": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "variable-name": [
            true,
            "allow-leading-underscore",
            "allow-pascal-case",
            "ban-keywords",
            "check-format"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "no-floating-promises": true
    }
}
