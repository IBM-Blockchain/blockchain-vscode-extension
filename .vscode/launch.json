// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Unit Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test"
      ],
      "outFiles": [
        "${workspaceFolder}/out/test/**/*.js"
      ],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Debug Unit Tests (no coverage)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test"
      ],
      "outFiles": [
        "${workspaceFolder}/out/test/**/*.js"
      ],
      "preLaunchTask": "npm: watch",
      "env": {
        "WITHOUTCOVERAGE": "true"
      }
    },
    {
      "name": "Cucumber",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/cucumber/data/cucumber.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/cucumber/"
      ],
      "outFiles": [
        "${workspaceFolder}/out/cucumber/**/*.feature"
      ],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Cucumber other fabric",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/cucumber/data/cucumber.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/cucumber/"
      ],
      "outFiles": [
        "${workspaceFolder}/out/cucumber/**/*.feature"
      ],
      "preLaunchTask": "npm: watch",
      "env": {
        "OTHER_FABRIC": "true"
      }
    },
    {
      "name": "Cucumber other fabric (new fabric)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/cucumber/data/cucumber.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/cucumber/"
      ],
      "outFiles": [
        "${workspaceFolder}/out/cucumber/**/*.feature"
      ],
      "preLaunchTask": "npm: cucumberTests",
      "env": {
        "OTHER_FABRIC": "true"
      }
    }
  ]
}
